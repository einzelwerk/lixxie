{% extends "template.njk" %}
{% block content %}
  <section class="section container pb-0">
    {% set items = [
      {
        link: "/",
        text: "Home"
      }, {
        link: '/help',
        text: "Help"
      }, {
        link: '',
        text: "Shipping"
      }
    ] %}

