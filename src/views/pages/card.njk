{% extends "template.njk" %}
{% block content %}
  <section class="section container pb-0">
    {% set items = [
      {
        link: "/",
        text: "Home"
      }, {
        link: '/catalog.html',
        text: "Neuheiten"
      }, {
        link: '',
        text: "Travis Scott x Air Jordan Graphic
 Hoody " } ] %}

    {{ breadcrumbs(items) }}
  </section>

  <section class="section container">
    <div class="section pt-0">
      <div class="flex flex-col items-start gap-6 max-w-6xl mx-auto md:gap-12 lg:flex-row">
        <div class="flex gap-4 h-[320px] md:h-[670px] min-w-0 max-w-2xl">
          <div class="hidden md:block flex-none w-20 swiper js-product-thumbs">
            <div class="swiper-wrapper">
              {% for item in[1, 2, 3, 4] %}
                <div class="swiper-slide group">
                  <picture
                class="block h-24 rounded-lg overflow-hidden group-[.swiper-slide-thumb-active]:border group-[.swiper-slide-thumb-active]:border-black"
              >
                    <img class="w-full h-full object-cover" src={% static './images/product/' + item + '.jpg' %} alt="">
                  </picture>
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="min-w-0 overflow-visible md:overflow-hidden swiper js-product-main">
            <div class="swiper-wrapper">
              {% for item in[1, 2, 3, 4] %}
                <div class="swiper-slide">
                  <picture class="block h-full rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src={% static './images/product/' + item + '.jpg' %} alt="">
                  </picture>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="flex flex-col items-start flex-1">
          <div class="flex items-center gap-5">
            <h1 class="font-serif text-md mb-3">Travis Scott x Air Jordan Graphic Hoody</h1>
            <button
            type="button"
            class="rounded-full w-12 h-12 flex-none flex md:hidden items-center justify-center border border--gray-100 bg-white group"
          >
              <svg width="18" height="18" class="fill-none stroke-black group-hover:fill-red group-hover:stroke-red">
                <use xlink:href="./assets/sprite.svg#favorite-filled_sprite"></use>
              </svg>
            </button>
          </div>
          <data class="font-serif text-gray-300 mb-6 text-md">49,00€</data>
          <form action="" class="flex flex-col items-start mb-3 md:mb-8">
            <fieldset class="mb-6">
              <legend class="text-gray-300 text-xs mb-3">Colour: <span class="text-xs text-black font-medium">White</span></legend>
              <div class="flex gap-2">
                {% for item in[1, 2, 3, 4] %}
                  <label class="w-[50px] h-[60px] block" for="{{ 'item-' + item }}">
                    <input class="sr-only peer" type="radio" id="{{ 'item-' + item }}" name="color"/>
                    <img class="rounded overflow-hidden w-full h-full object-cover peer-checked:border-2 peer-checked:border-paleOrange" src={% static './images/colors/' + item + '.jpg' %} alt="" >
                  </label>
                {% endfor %}
              </div>
            </fieldset>
            <fieldset class="mb-8">
              <legend class="text-gray-300 text-xs mb-3">Grösse</legend>
              <div class="flex gap-2">
                {% for item in['S', 'M', 'L', 'XL'] %}
                  <label class="w-[50px] h-[40px] block rounded overflow-hidden" for="{{ item }}">
                    <input class="sr-only peer" type="radio" id="{{ item }}" name="size"/>
                    <span
                  class="border border-gray-100 text-xs peer-checked:border-black peer-focus:border-black peer-checked:bg-black peer-checked:text-white flex items-center justify-center w-full h-full cursor-pointer hover:bg-gray-400"
                  >{{ item }}</span
                >
                  </label>
                {% endfor %}
              </div>
            </fieldset>

            <div class="flex gap-2 md:flex-col md:items-start md:gap-5">
              <div class="flex items-center border border-gray-100 rounded px-2 md:px-3 p-3 gap-3 js-number-root">
                <button type="button" class="js-change-number js-decrement-number text-gray-200 hover:text-black">
                  <svg width="16" height="16">
                    <use xlink:href="./assets/sprite.svg#minus_sprite"></use>
                  </svg>
                </button>
                <input type="number" min="0" value="1" class="text-xs w-5 border-none p-0 text-center bg-[transparent]"/>
                <button type="button" class="js-change-number js-increment-number text-gray-200 hover:text-black">
                  <svg width="16" height="16">
                    <use xlink:href="./assets/sprite.svg#plus_sprite"></use>
                  </svg>
                </button>
              </div>

              <div class="flex items-center gap-4">
                <button class="btn btn--black-filled uppercase font-semibold md:px-14 rounded">Zum Warenkorb</button>
                <button
                type="button"
                class="rounded-full w-14 h-14 hidden md:flex flex-none items-center justify-center border border--gray-100 bg-white group"
              >
                  <svg width="24" height="24" class="fill-none stroke-black group-hover:fill-red group-hover:stroke-red">
                    <use xlink:href="./assets/sprite.svg#favorite-filled_sprite"></use>
                  </svg>
                </button>
              </div>
            </div>
          </form>
          <div class="flex flex-col gap-3 py-3 px-4 mb-8 border border-gray-100 rounded w-full">
            <div class="flex items-center gap-3">
              <svg width="24" height="24">
                <use xlink:href="./assets/sprite.svg#delivery_sprite"></use>
              </svg>
              <span class="text-xs">Kostenloser Versand immer ab 69 eur</span>
            </div>
            <div class="flex items-center gap-3">
              <svg width="24" height="24">
                <use xlink:href="./assets/sprite.svg#box_sprite"></use>
              </svg>
              <span class="text-xs">14 tage Rückaberecht</span>
            </div>
          </div>
          <details class="max-w-full w-full block group cursor-pointer border-b border-gray-100">
            <summary class="flex font-semibold items-center justify-between py-5">
            Details zum Produkt
            <svg width="16" height="16" class="transition-all group-open:rotate-180">
                <use xlink:href="./assets/sprite.svg#arrow-d_sprite"></use>
              </svg>
            </summary>
            <div class="pb-5 prose">
