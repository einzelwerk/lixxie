{% block content %}

  <section class="section container pb-0">
    {% set items = [
      {
        link: "/",
        text: "Home"
      }, {
        link: '',
        text: "Search results for 'Sweatshirt'"
      }
    ] %}

    {{ breadcrumbs(items) }}
