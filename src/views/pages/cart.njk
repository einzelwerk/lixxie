{% extends "template.njk" %}
{% block content %}
  <section class="section container pb-0">
    {% set items = [
      {
        link: "/",
        text: "Home"
      }, {
        link: '',
        text: "Cart"
      }
    ] %}

    {{ breadcrumbs(items) }}
  </section>
  <section class="section container">
    <div class="flex gap-5 items-end mb-7 md:mb-10">
      <h1 class="font-serif text-lg">Warenkorb</h1>
      <span class="text-gray-200 text-md font-serif">3 Artikel </span>
    </div>

    <form action="" class="flex flex-col gap-8 md:gap-24 lg:flex-row">
      <div class="flex flex-col flex-1 border-t border-gray-100">
        {% for item in[1, 2, 3] %}
          <div class="flex items-start md:items-stretch gap-6 py-6 md:py-8 border-b border-gray-100 last:border-none">
            <picture class="block flex-none rounded-lg overflow-hidden w-24 md:w-40">
              <img class="w-full h-full object-cover" src={% static './images/cart.jpg' %} alt="">
            </picture>
            <div class="flex flex-col flex-1 justify-between">
              <div class="flex flex-col gap-2 md:gap-0 md:flex-row justify-between">
                <div class="flex flex-col gap-3">
                  <h2 class="text-sm font-medium">Kurze Steppjacke mit Kapuze Willer Mokkafarben</h2>
                  <div class="flex flex-wrap">
                    {% for item in[1, 2, 3] %}
                      <div class="flex gap-1 text-[10px] md:text-xs px-2 first:pl-0 last:border-none border-r border-gray-200">
                        <span class="text-gray-200">Farbe:</span>
                        <span class="font-medium">White</span>
                      </div>
                    {% endfor %}
                  </div>
                </div>
                <div class="flex items-center md:flex-col gap-3">
                  <data class="text-sm font-serif">49,00€</data>
                  <span class="text-xs text-gray-200">inkl. MwSt.</span>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="flex items-center border border-gray-100 rounded px-2 md:px-3 p-3 gap-3 js-number-root">
                    <button type="button" class="js-change-number js-decrement-number text-gray-200 hover:text-black">
                      <svg width="16" height="16">
                        <use xlink:href="./assets/sprite.svg#minus_sprite"></use>
                      </svg>
                    </button>
                    <input type="number" min="0" value="1" class="text-xs w-5 border-none p-0 text-center bg-[transparent]"/>
                    <button type="button" class="js-change-number js-increment-number text-gray-200 hover:text-black">
                      <svg width="16" height="16">
                        <use xlink:href="./assets/sprite.svg#plus_sprite"></use>
                      </svg>
                    </button>
                  </div>
                  <button
                type="button"
                class="rounded-full w-10 h-10 flex flex-none items-center justify-center border border--gray-100 bg-white group"
              >
                    <svg width="16" height="16" class="fill-none stroke-black group-hover:fill-red group-hover:stroke-red">
                      <use xlink:href="./assets/sprite.svg#favorite-filled_sprite"></use>
                    </svg>
                  </button>
                </div>
                <button class="flex gap-2 items-center text-xs">
                  <svg width="16" height="16">
                    <use xlink:href="./assets/sprite.svg#del_sprite"></use>
                  </svg>
                  <span>Delete</span>
                </button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="flex flex-col max-w-[424px] w-full  border-t border-gray-100">
        <h2 class="font-serif text-md my-6 md:my-8">Übersicht Ihrer Bestellung</h2>
        <div class="flex flex-col gap-4 pb-6  border-b border-gray-100">
          <div class="flex justify-between text-xs md:text-sm">
            <span>Produkte</span>
            <span class="font-medium">147,00€</span>
          </div>
          <div class="flex justify-between text-xs md:text-sm">
            <div class="flex flex-col gap-1">
              <span>Standartlieferung</span>
              <span class="text-xs text-gray-200">
                (3-4 Werktage)
              </span>
            </div>
            <span class="font-medium">11,95€</span>
          </div>
        </div>
        <div class="flex flex-col gap-5">
          <div class="flex justify-between pt-6">
            <div class="flex items-center gap-1">
              <span class="text-base font-medium">Total</span>
              <span class="text-xs text-gray-200">inkl. MwSt.</span>
            </div>
            <data class="text-base font-medium">158,95€</data>
          </div>
          <div class="flex flex-col gap-2">
            <a href="" class="btn btn--black-filled uppercase font-medium ">
              zur kasse
            </a>
            <a href="" class="btn btn--black uppercase font-medium rounded">
              weiter shoppen
            </a>
          </div>
          <details class="max-w-full w-full block group cursor-pointer">
            <summary class="flex items-center justify-between py-5">
           Haben Sie einen  Gutscheincode?
            <svg width="16" height="16" class="transition-all group-open:rotate-180">
                <use xlink:href="./assets/sprite.svg#arrow-d_sprite"></use>
              </svg>
            </summary>
            <div action="" class="flex gap-2 md:gap-3 mb-3">
              <input type="text" class="flex-1 bg-[transparent] py-3 md:py-3 px-2 md:px-4 rounded-l border border-gray-100 placeholder:opacity-50" placeholder="Gutscheincode"/>
              <button class="text-[12px] max-sm:flex-1 max-sm:px-0 sm:text-xs btn btn--black py-3 uppercase" type="button">

           anwenden
              </button>
            </div>
            <p class="text-xs text-gray-200 mb-6">Der Gutscheincode kann nicht in Kombination mit anderen Angeboten oder Gutscheincodes verwendet werden.</p>
            <div class="flex flex-col gap-3 ">
              <div class="flex items-center gap-3">
                <svg width="24" height="24" class="text-black">
                  <use xlink:href="./assets/sprite.svg#delivery_sprite"></use>
                </svg>
                <span class="text-xs">Kostenloser Versand immer ab 69 eur</span>
              </div>
              <div class="flex items-center gap-3">
                <svg width="24" height="24" class="text-black">
                  <use xlink:href="./assets/sprite.svg#box_sprite"></use>
                </svg>
                <span class="text-xs">14 tage Rückaberecht</span>
              </div>
            </div>
          </details>
        </div>
      </div>
    </form>
  </section>

  <section class="section container">
    <div class="section-heading-2">
      <h2 class="section-heading__title">Ihnen könnte auch gefallen</h2>

    </div>

    <div class="swiper js-slider-5 overflow-visible md:overflow-hidden">
      <div class="swiper-wrapper">
        {% for item in[1, 2, 3, 4, 5] %}
          <div class="swiper-slide">
            {% include "card.njk" %}
          </div>
        {% endfor %}
      </div>
    </div>

  </section>
{% endblock %}