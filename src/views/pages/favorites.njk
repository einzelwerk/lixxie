{% extends "template.njk" %}
{% block content %}
  <section class="section container pb-0">
    {% set items = [
      {
        link: "/",
        text: "Home"
      }, {
        link: '',
        text: "Favorites"
      }
    ] %}

    {{ breadcrumbs(items) }}
  </section>
  <section class="section container">
    <div class="flex gap-5 items-end mb-7 md:mb-10 ">
      <h1 class="font-serif text-lg">Favourites</h1>
      <span class="text-gray-200">6 Produkte</span>
    </div>

    <div class="grid grid-cols-2 gap-y-6 gap-x-3 md:gap-y-14 md:gap-x-5 md:grid-cols-3 lg:grid-cols-4">
      {% for item in[
        1,
        2,
        3,
        4,
        5,
        6,
        7,
        8
      ] %}
        {% include "card-extended.njk" %}
      {% endfor %}
    </div>
  </section>

  {% include "newsletter.njk" %}

{% endblock %}